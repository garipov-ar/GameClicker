<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.GameOverPage"
             Title="Game Over">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
        <Label Text="Game Over!" 
               FontSize="40" 
               HorizontalOptions="Center" 
               TextColor="Red" />

        <Label Text="Ваш сайт заблокирован Роскомнадзором." 
               FontSize="20" 
               HorizontalOptions="Center" 
               TextColor="Gray" />

        <Button Text="Начать сначала" 
                FontSize="20" 
                HorizontalOptions="Center" 
                Clicked="OnRestartButtonClicked" />
    </StackLayout>
</ContentPage>